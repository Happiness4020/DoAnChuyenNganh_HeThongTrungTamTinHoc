@model DoAnChuyenNganh_HeThongTrungTamTinHoc.Models.TinTucThongBao
@{
    ViewBag.Title = Model.TieuDe;
    Layout = "~/Views/Shared/_Main.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-3" style="color: #0066b3;">@Model.TieuDe</h2>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card mb-4 shadow-lg rounded">
                <img src="~/images/@Model.Anh" class="card-img-top" alt="Ảnh tin tức" />
                <div class="card-body">
                    <h5 class="card-title">@Model.TieuDe</h5>
                    <p class="card-text">@Html.Raw(Model.NoiDung)</p>
                    <p class="card-text">
                        <small class="text-muted">Ngày tạo: @Model.NgayTao.Value.ToString("yyyy/MM/dd")</small>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card-img-top {
        height: 300px;
        object-fit: cover;
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #343a40;
    }

    .card-text {
        font-size: 1rem;
        color: #555;
    }

    .shadow-lg {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .container {
        margin-top: 30px;
    }
</style>
