
@{
    ViewBag.Title = "Đăng ký tài khoản";
    Layout = "~/Views/Shared/_Main.cshtml";
}

<style>
    .dangky-body {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        background-color: #f0f2f5;
        margin: 0;
    }
    .register-card {
        width: 100%;
        max-width: 500px;
        background-color: #0066b3;
        border-radius: 8px;
        padding: 40px 25px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
    }

    .register-card h2 {
        color: white;
        font-weight: 600;
        margin-bottom: 25px;
    }

    .form-control {
        border-radius: 6px;
    }

    .btn-submit {
        background-color: #ffffff;
        color: #0066b3;
        font-weight: bold;
        border-radius: 6px;
        width: 48%;
    }

    .btn-back {
        background-color: orangered;
        color: #fff;
        font-weight: bold;
        border-radius: 6px;
        width: 48%;
    }
</style>

<div class="dangky-body">
    <div class="card register-card">
        <div class="text-center">
            <h2>@ViewBag.Title</h2>
        </div>
        <div>
            <div class="mb-3">
                <input type="text" placeholder="Mã học viên" class="form-control" />
            </div>
            <div class="mb-3">
                <input type="text" placeholder="Email" class="form-control" />
            </div>
            <div class="mb-3">
                <input type="password" placeholder="Mật khẩu" class="form-control" />
            </div>
            <div class="mb-3">
                <input type="password" placeholder="Xác nhận mật khẩu" class="form-control" />
            </div>
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-submit">Đăng ký</button>
                <a href="/Home/Index" class="btn btn-back">Quay lại</a>
            </div>
        </div>
    </div>
</div>
