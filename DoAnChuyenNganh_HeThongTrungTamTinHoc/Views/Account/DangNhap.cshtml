
@model DoAnChuyenNganh_HeThongTrungTamTinHoc.Models.DangNhap

@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Main.cshtml";
}

<div class="card mb-3 w-50 mx-auto mt-5" style="max-width: 700px; background-color: #0066b3;">
    <div class="row g-0 mt-1 mb-0">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="card-body text-center">
                <h2 style="color: white;">@ViewBag.Title</h2>
            </div>
        </div>
    </div>
    <div class="row g-0 mt-0">
        <div class="col-md-12">
            <div class="card-body">
                @using (Html.BeginForm("DangNhap", "Account", FormMethod.Post))
                {
                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6 text-light">
                            <input type="email" placeholder="Email" class="form-control" />
                            @*@Html.LabelFor(model => model.Username, "Đăng nhập")
                                @Html.TextBoxFor(model => model.Username, new { placeholder = "Tên đăng nhập..", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })*@
                        </div>
                    </div>
                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6 text-light">
                            <input type="password" placeholder="Mật khẩu" class="form-control" />
                            @*@Html.LabelFor(model => model.Password, "Mật khẩu")
                                @Html.PasswordFor(model => model.Password, new { placeholder = "Mật khẩu..", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })*@
                        </div>
                    </div>
                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6 text-light">
                            @Html.ValidationSummary("", new { @class = "text-danager" })
                        </div>
                    </div>
                    <div class="row my-2 mt-4">
                        <div class="col-3"></div>
                        <div class="col-6 text-light text-end">
                            <button type="submit" class="btn btn-light">Đăng nhập</button> &nbsp;
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

