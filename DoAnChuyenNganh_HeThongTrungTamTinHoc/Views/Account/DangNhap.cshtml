
@model DoAnChuyenNganh_HeThongTrungTamTinHoc.Models.TaiKhoan

@{

    ViewBag.Title = "Đăng nhập hệ thống";

    Layout = "~/Views/Shared/_Main.cshtml";
}

<style>
    .dangnhap-body {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        background-color: #f0f2f5;
        margin: 0;
    }

    .login-card {
        width: 100%;
        max-width: 400px;
        background-color: #0066b3;
        border-radius: 8px;
        padding: 30px 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .login-card h3 {
        color: white;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .form-control {
        border-radius: 6px;
    }

    .btn-submit {
        background-color: #ffffff;
        color: #0066b3;
        font-weight: bold;
        border-radius: 6px;
        width: 100%;
    }
</style>


<div class="dangnhap-body">
    <div class="card login-card">
        <div class="text-center">
            <h3>@ViewBag.Title</h3>
        </div>
    </div>
    <div class="row g-0 mt-0">
        <div class="col-md-12">
            <div class="card-body">
                @using (Html.BeginForm("DangNhap", "Account", FormMethod.Post))
                {
                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6 text-light">
                            @*<input type="email" placeholder="Email" class="form-control" />*@
                            @Html.LabelFor(model => model.TenDangNhap, "Đăng nhập")
                            @Html.TextBoxFor(model => model.TenDangNhap, new { placeholder = "Tên đăng nhập..", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6 text-light">
                            @*<input type="password" placeholder="Mật khẩu" class="form-control" />*@
                            @Html.LabelFor(model => model.MatKhau, "Mật khẩu")
                            @Html.PasswordFor(model => model.MatKhau, new { placeholder = "Mật khẩu..", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6 text-light">
                            @Html.ValidationSummary("", new { @class = "text-danager" })
                        </div>
                    </div>
                    <div class="row my-2 mt-4">
                        <div class="col-3"></div>
                        <div class="col-6 text-light text-end">
                            <button type="submit" class="btn btn-light">Đăng nhập</button> &nbsp;
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

