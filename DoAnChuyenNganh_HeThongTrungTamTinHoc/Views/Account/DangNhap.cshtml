@{
    ViewBag.Title = "Đăng nhập hệ thống";
    Layout = "~/Views/Shared/_Main.cshtml";
}

<style>
    .dangnhap-body {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        background-color: #f0f2f5;
        margin: 0;
    }

    .login-card {
        width: 100%;
        max-width: 400px;
        background-color: #0066b3;
        border-radius: 8px;
        padding: 30px 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .login-card h3 {
        color: white;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .form-control {
        border-radius: 6px;
    }

    .btn-submit {
        background-color: #ffffff;
        color: #0066b3;
        font-weight: bold;
        border-radius: 6px;
        width: 100%;
    }
</style>


<div class="dangnhap-body">
    <div class="card login-card">
        <div class="text-center">
            <h3>@ViewBag.Title</h3>
        </div>
        <div>
            <div class="mb-3">
                <input type="email" placeholder="Email" class="form-control" />
            </div>
            <div class="mb-3">
                <input type="password" placeholder="Mật khẩu" class="form-control" />
            </div>
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-submit">Đăng nhập</button>
            </div>
        </div>
    </div>
</div>

