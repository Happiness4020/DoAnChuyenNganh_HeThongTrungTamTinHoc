@model dynamic
@{
    ViewBag.Title = "Nhập OTP";
    Layout = "~/Views/Shared/_Main.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h2>Nhập OTP</h2>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("NhapOTP", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group mb-3">
                            <label for="otp" class="form-label">Mã OTP:</label>
                            <input type="text" name="otp" class="form-control form-control-lg" placeholder="Nhập mã OTP" required />
                        </div>

                        <div class="form-group mb-3">
                            <label for="newPassword" class="form-label">Mật khẩu mới:</label>
                            <input type="password" name="newPassword" class="form-control form-control-lg" placeholder="Nhập mật khẩu mới" required />
                        </div>

                        <button type="submit" class="btn btn-success btn-lg btn-block">Xác Nhận</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

