@model DoAnChuyenNganh_HeThongTrungTamTinHoc.Models.KhoaHoc
@{
    ViewBag.Title = "Đăng ký khóa học";
    Layout = "~/Views/Shared/_Main.cshtml";
}

<div class="container-fluid">
    <div class="card mb-3 mx-auto shadow-lg border-2 mt-3" style="max-width: 1024px; border-radius: 8px; background-color: #f8f9fa;">
        <div class="row g-0 mt-1">
            <div class="col-md-12 text-center">
                <div class="card-body">
                    <h2 class="text-danger" style="font-weight: bold; font-size: 2.5em;">Đăng ký khóa học</h2>
                </div>
            </div>
        </div>
        <div class="row g-0">
            <div class="col-md-6">
                <img src="~/images/@Model.Anh" class="img-fluid" alt="Course image" style="width: 100%; height: 100%;">
            </div>
            <div class="col-md-6 d-flex align-items-center p-3 shadow-sm" style="background-color: #0066b3;">
                <div class="card-body">
                    <h5 class="card-title mb-2 text-white" style="font-weight: 600; font-size: 1.8em;">@Model.TenKH</h5>
                    <p class="card-text mb-2 text-white">Chương trình học: <span class="text-warning">@Html.DisplayFor(model => model.ChuongTrinhHoc.TenChuongTrinh)</span></p>
                    <p class="card-text mb-2 text-white">Ngày khai giảng: <span class="text-warning">@Html.DisplayFor(model => model.NgayBatDau)</span></p>
                    <p class="card-text mb-2 text-white">Ngày kết thúc: <span class="text-warning">@Html.DisplayFor(model => model.NgayKetThuc)</span></p>
                    <p class="card-text mb-2 text-white">Số buổi học: <span class="text-warning">@Html.DisplayFor(model => model.Sobuoihoc)</span></p>
                    <p class="card-text mb-2 text-white">Học phí: <span class="text-warning">@Html.DisplayFor(model => model.HocPhi)</span></p>
                    <p class="card-text mb-2 text-white">Loại khóa học: <span class="text-warning">@Html.DisplayFor(model => model.LoaiKH)</span></p>
                </div>
            </div>
        </div>
        <div class="row g-0">
            <div class="col-md-12">
                <div class="card-body">

                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mb-5">
    <div class="container mt-5">
        <h2 class="text-center mb-4">Thông Tin Học Viên</h2>
        <form id="formDangKy" action="@Url.Action("DangKyKhoaHoc", "KhoaHoc")" method="post" enctype="multipart/form-data" class="border p-4 rounded shadow">
            <input type="hidden" name="MaKH" value="@Model.MaKH" />
            <div class="mb-3">
                <label for="HoTen" class="form-label">Họ Tên</label>
                <input type="text" class="form-control" id="hoTen" name="HoTen" required placeholder="Nhập họ tên">
            </div>

            <div class="mb-3">
                <label for="NgaySinh" class="form-label">Ngày Sinh</label>
                <input type="date" class="form-control" id="ngaySinh" name="NgaySinh" required>
            </div>

            <div class="mb-3">
                <label for="GioiTinh" class="form-label">Giới Tính</label>
                <select class="form-select" id="gioiTinh" name="GioiTinh" required>
                    <option value="" disabled selected>Chọn giới tính</option>
                    <option value="Nam">Nam</option>
                    <option value="Nữ">Nữ</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="Email" required placeholder="Nhập email">
            </div>

            <div class="mb-3">
                <label for="SoDT" class="form-label">Số Điện Thoại</label>
                <input type="tel" class="form-control" id="soDT" name="SoDT" required placeholder="Nhập số điện thoại" pattern="^(03|05|07|08|09)\d{8}$">
            </div>

            <div class="mb-3">
                <label for="DiaChi" class="form-label">Địa Chỉ</label>
                <textarea class="form-control" id="diaChi" name="DiaChi" rows="3" required placeholder="Nhập địa chỉ"></textarea>
            </div>

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary me-2">Xác nhận</button>
                <button type="reset" class="btn btn-secondary">Xóa</button>
            </div>
        </form>
    </div>
</div>

<div class="container-fluid">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
</div>

<script>document.getElementById("formDangKy").addEventListener("submit", function (e) {
        const inputNgaySinh = document.getElementById("ngaySinh");
        const ngaySinh = new Date(inputNgaySinh.value);

        if (!isNaN(ngaySinh)) {
            const formattedDate = `${ngaySinh.getFullYear()}/${(ngaySinh.getMonth() + 1).toString().padStart(2, '0')}/${ngaySinh.getDate().toString().padStart(2, '0')}`;
            inputNgaySinh.value = formattedDate;
        }
    });</script>
