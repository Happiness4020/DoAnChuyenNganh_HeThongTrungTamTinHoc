<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giảng viên - Lịch dạy và thông tin</title>
    <link href="~/Css/GiangVien.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body class="d-flex flex-column h-100">
    <header class="bg-primary" style="background-color: #0066b3;">
        <h1>Chào mừng Giảng viên</h1>
        <nav>
            <ul>
                <li><a href="#profile">Thông tin cá nhân</a></li>
                <li><a href="#schedule">Lịch dạy</a></li>
                <li><a href="#logout">Đăng xuất</a></li>
            </ul>
        </nav>
    </header>

    <main class="p-3 w-100">
        @RenderBody()
        <section id="profile">
            <h2>Thông tin giảng viên</h2>
            <p>Tên: <span id="teacherName">Nguyễn Văn A</span></p>
            <p>Email: <span id="teacherEmail">nguyenvana@example.com</span></p>
            <p>Khoa: <span id="teacherDepartment">Khoa Công Nghệ Thông Tin</span></p>
        </section>

        <section id="schedule">
            <h2>Lịch dạy</h2>
            <table>
                <thead>
                    <tr>
                        <th>Môn học</th>
                        <th>Thời gian</th>
                        <th>Phòng học</th>
                    </tr>
                </thead>
                <tbody id="scheduleTable">
                    <!-- Lịch dạy sẽ được hiển thị tại đây -->
                </tbody>
            </table>
        </section>

    </main>

    <footer class="bg-primary position-fixed left-0 text-white" style="background-color: #0066b3; ">
        <p>© 2024 Quản lý lịch giảng dạy</p>
    </footer>


    <script src="~/Javascript/GiangVien.js"></script>
</body>
</html>