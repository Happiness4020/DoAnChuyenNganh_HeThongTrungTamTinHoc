@{
    var userName = Context.Request.Cookies["NguoiDung"];
    var role = Context.Request.Cookies["QuyenHan"];
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <title>Trung tâm tin học - HUIT</title>

    <style>
        .custom-header {
            background-color: #0066b3;
            color: white;
        }

        .info {
            float: left;
            color: #fff;
            font-weight: normal;
            text-align: left;
            width: 100%;
            padding-left: 3px;
        }
    </style>
</head>
<body class="d-flex flex-column h-100">
    <div style="background-color: #fff; height: 100px;" class="d-flex align-items-center">
        <a href="@Url.Action("Index", "Home")" class="text-decoration-none w-100 d-flex align-items-center justify-content-center" style="color: #0066b3">
            <img src="https://its.huit.edu.vn/app_web/ttcntt/images/news/01_banner_its-.jpg?width=200" alt="Logo" />
            <div class="d-flex align-items-center flex-column mx-2">
                <h4>Trường Đại học Công thương TP.Hồ Chí Minh</h4>
                <h3 class="mx-2" style="color: red;">Trung tâm Tin học HUIT</h3>
            </div>
        </a>
    </div>
    <header style="background-color: #0066b3;">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg navbar-light">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto mx-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">
                                <img src="~/images/home.png" />
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("LichHoc", "Home")">Lịch học</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("KetQuaHocTap", "Home")">Kết quả học tập</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("DangKiKhoaHoc", "Home")">Đăng kí khóa học</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("ThanhToanHocPhi", "Home")">Học phí</a>
                        </li>
                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Chào @userName.Value
                            </a>
                            <ul class="dropdown-menu mt-4">
                                <li> <a class="nav-link" href="@Url.Action("Index", "HocVien")">Thông tin cá nhân</a></li>
                                <li> <a class="nav-link" href="@Url.Action("DangXuat", "Account")">Đăng xuất</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>

    <main class="p-3 min-vh-100" style="background-color: #fff">
        @RenderBody()
    </main>

    <footer class="left-0 text-white" style="background-color: #0066b3; position: relative; bottom: 0; width: 100%; height: auto;">
        <div class="pt-10 pb-10">
            <div class="container mt-3">
                <div class="row">
                    <div class="col-md-6">
                        <div class="info">
                            <dl>
                                <dt><i class="fa fa-home"></i>&nbsp;Đơn vị:</dt>
                                <dd>Trung tâm Công nghệ Thông tin</dd>
                            </dl>
                            <dl>
                                <dt><i class="fa fa-map-marker"></i>&nbsp;Địa chỉ:</dt>
                                <dd>140 Lê Trọng Tấn, P. Tây Thạnh, Q. Tân Phú, TP. Hồ Chí Minh</dd>
                            </dl>
                            <dl>
                                <dt><i class="fa fa-phone"></i>&nbsp;Điện thoại:</dt>
                                <dd>Hotline: 0869 016 079</dd>
                            </dl>
                            <dl>
                                <dt><i class="fa fa-envelope"></i>&nbsp;Email:</dt>
                                <dd>its@hufi.edu.vn</dd>
                            </dl>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="map">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.056848429508!2d106.62643781411664!3d10.80695806158611!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752be27d8b4f4d%3A0x92dcba2950430867!2zVHLGsOG7nW5nIMSQYcyjaSBob8yjYyBDw7RuZyBuZ2hp4buHcCBUaOG7sWMgcGjhuqltIFRow6BuaCBwaOG7kSBI4buTIENow60gTWluaA!5e0!3m2!1svi!2s!4v1569207231123!5m2!1svi!2s" width="100%" height="260" frameborder="0" style="border: 0" allowfullscreen=""></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"></script>
</body>
</html>
