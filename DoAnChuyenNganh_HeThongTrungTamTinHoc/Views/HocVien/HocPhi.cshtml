@model List<DoAnChuyenNganh_HeThongTrungTamTinHoc.Models.GiaoDichHocPhi>
@{
    ViewBag.Title = "Học Phí";
    Layout = "~/Views/Shared/_HocVien.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Giỏ Hàng - Học Phí</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center">
            Giỏ hàng của bạn hiện tại đang trống.
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <table class="table table-hover table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Mã Học Viên</th>
                            <th>Mã Khóa Học</th>
                            <th>Mã Phương Thức</th>
                            <th>Ngày Giao Dịch</th>
                            <th>Số Tiền</th>
                            <th>Số Điện Thoại</th>
                            <th>Email</th>
                            <th>Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var course = item.KhoaHoc; // Khóa học liên quan
                            var student = item.HocVien; // Học viên liên quan

                            if (course != null && student != null)
                            {
                                <tr>
                                    <td>@student.MaHV</td> <!-- Mã học viên -->
                                    <td>@course.MaKH</td> <!-- Mã khóa học -->
                                    <td>@item.MaPT</td>
                                    <td>@(item.NgayGD.HasValue ? item.NgayGD.Value.ToString("dd/MM/yyyy") : "Không xác định")</td> <!-- Ngày giao dịch -->
                                    <td>@string.Format("{0:N0} VND", item.SoTien)</td>
                                    <td>@student.SoDT</td> <!-- Số điện thoại học viên -->
                                    <td>@student.Email</td> <!-- Email học viên -->
                                    <td class="text-center">
                                        <a href="@Url.Action("RemoveFromCart", "HocVien", new { courseId = item.MaKH })" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash-alt"></i> Xóa
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>

                <div class="text-right mt-4">
                    <p class="font-weight-bold h5">
                        Tổng Học Phí: <span class="text-danger">@ViewBag.TotalAmount.ToString("N0") VND</span>
                    </p>
                    <a href="@Url.Action("ThanhToan", "HocVien")" class="btn btn-success btn-lg">
                        <i class="fas fa-credit-card"></i> Thanh Toán
                    </a>
                </div>
            </div>
        </div>
    }
</div>

    
