        }

        .tooltip {
            position: absolute;
            background-color: rgba(0, 0, 0, 0.8);
            color: white;
            padding: 5px;
            border-radius: 5px;
            display: none;
            z-index: 1000;
            white-space: nowrap;
        }

        body {
            font-family: 'Roboto', sans-serif;
            line-height: 1.6;
