    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script>
        let currentDate = new Date();

        function updateScheduleDates() {
            const days = [];
            const firstDayOfWeek = new Date(currentDate);
            firstDayOfWeek.setDate(currentDate.getDate() - currentDate.getDay() + 1);

            for (let i = 0; i < 7; i++) {
                const day = new Date(firstDayOfWeek);
                day.setDate(firstDayOfWeek.getDate() + i);
                days.push(day);
            }

            document.getElementById("day1").innerHTML = `(${days[0].getDate()}/${days[0].getMonth() + 1})`;
            document.getElementById("day2").innerHTML = `(${days[1].getDate()}/${days[1].getMonth() + 1})`;
            document.getElementById("day3").innerHTML = `(${days[2].getDate()}/${days[2].getMonth() + 1})`;
            document.getElementById("day4").innerHTML = `(${days[3].getDate()}/${days[3].getMonth() + 1})`;
            document.getElementById("day5").innerHTML = `(${days[4].getDate()}/${days[4].getMonth() + 1})`;
            document.getElementById("day6").innerHTML = `(${days[5].getDate()}/${days[5].getMonth() + 1})`;
            document.getElementById("day7").innerHTML = `(${days[6].getDate()}/${days[6].getMonth() + 1})`;
        }

        function changeWeek(offset) {
            currentDate.setDate(currentDate.getDate() + offset * 7);
            updateScheduleDates();
        }

        function updateSchedule() {
            const selectedDate = document.getElementById("datePicker").value;
            if (selectedDate) {
                currentDate = new Date(selectedDate);
                updateScheduleDates();
            }
        }

        $(document).ready(function () {
            updateScheduleDates();

            $('[data-tooltip]').hover(function () {
                let tooltip = $('<div class="tooltip"></div>').html($(this).data('tooltip'));
                $('body').append(tooltip);
                tooltip.fadeIn();
            }, function () {
                $('.tooltip').remove();
            }).mousemove(function (e) {
                $('.tooltip').css({ top: e.pageY + 10, left: e.pageX + 10 });
            });
        });
    </script>
</body>
</html>
