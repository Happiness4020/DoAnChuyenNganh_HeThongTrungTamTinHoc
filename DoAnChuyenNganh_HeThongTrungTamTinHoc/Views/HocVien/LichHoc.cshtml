            <div class="mb-3">
                <label for="datePicker" class="form-label">Chọn ngày:</label>
                <input type="date" class="form-control" id="datePicker" name="datePicker" onchange="updateSchedule()">
            </div>

            <div class="navigation-buttons">
                <button class="btn btn-primary" onclick="changeWeek(-1)">Tuần trước</button>
                <button class="btn btn-primary" onclick="changeWeek(1)">Tuần sau</button>
            </div>
            <table class="table table-bordered">
