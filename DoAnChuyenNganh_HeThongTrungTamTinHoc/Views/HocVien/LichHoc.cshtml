@model IEnumerable<DoAnChuyenNganh_HeThongTrungTamTinHoc.Models.LichHocView>
@{
    ViewBag.Title = "LichHoc";
    Layout = "~/Views/Shared/_HocVien.cshtml";
}

<link href="~/Css/LichHoc.css" rel="stylesheet" />

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="utf-8" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <title>Trung tâm tin học - HUIT</title>
    <style>
        .custom-header {
            background-color: #0066b3;
            color: white;
        }

        .info {
            float: left;
            color: #fff;
            font-weight: normal;
            text-align: left;
            width: 100%;
            padding-left: 3px;
        }

        .class-box {
            padding: 10px;
            color: white;
            border-radius: 5px;
            font-size: 0.9em;
            line-height: 1.5;
            background-color: #28a745;
        }
    </style>
</head>
<body class="d-flex flex-column h-100 w-100">
    <header class="custom-header">
        <h1 class="text-center py-3">Lịch Học Viên</h1>
    </header>

    <main class="container my-4">
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Ca học</th>
                        <th>Tên Lớp</th>
                        <th>Giờ Bắt Đầu</th>
                        <th>Giờ Kết Thúc</th>
                        <th>Giáo Viên</th>
                        <th>Ngày Bắt Đầu</th>
                        <th>Ngày Kết Thúc</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MaLop</td>
                                <td>@item.TenLop</td>
                                <td><i class="fas fa-clock"></i> @item.GioBatDau</td>
                                <td><i class="fas fa-clock"></i> @item.GioKetThuc</td>
                                <td><i class="fas fa-user"></i> @item.TenGV</td>
                                <td>@item.NgayBatDau</td>
                                <td>@item.NgayKetThuc</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">Không có dữ liệu lịch học</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </main>

    <footer class="text-white text-center py-3" style="background-color: #0066b3; width: 100%;">
        © 2024 Trung Tâm Tin Học - HUIT
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
