
@{
    ViewBag.Title = "ThongTinThanhToan";
    Layout = "~/Views/Shared/_HocVien.cshtml";
}


<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Lấy tất cả hình ảnh có class "img-hover-zoom"
        var images = document.querySelectorAll(".img-hover-zoom");

        // Thêm sự kiện mouseenter và mouseleave cho từng hình ảnh
        images.forEach(function (image) {
            image.addEventListener("mouseenter", function () {
                image.style.transform = "scale(1.1)"; // Phóng to khi di chuột vào
            });

            image.addEventListener("mouseleave", function () {
                image.style.transform = "scale(1)"; // Trở lại kích thước ban đầu khi chuột rời khỏi
            });
        });
    });
</script>



<style>
    .container {
        overflow: visible; /* Cho phép hình ảnh vượt ra ngoài container */
    }


    .img-hover-zoom {
        transition: transform 0.3s ease; /* Thêm hiệu ứng mượt mà khi thay đổi */
        width: 100%;
        height: auto;
        max-width: 100%; /* Đảm bảo hình ảnh không vượt quá chiều rộng của container */
        display: block;
        margin: 0 auto; /* Đảm bảo hình ảnh căn giữa */
    }

    }

    .img-hover-zoom:hover {
        transform: scale(1.1); /* Phóng to hình ảnh khi di chuột vào */
    }
</style>
