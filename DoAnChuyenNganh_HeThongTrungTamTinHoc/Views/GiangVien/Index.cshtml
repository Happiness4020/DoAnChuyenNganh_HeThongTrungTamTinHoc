@model DoAnChuyenNganh_HeThongTrungTamTinHoc.Models.GiaoVien
@{
    ViewBag.Title = "Thông tin giảng viên";
    Layout = "~/Views/Shared/_GiangVien.cshtml";
}

<style>
    #profile {
        width: 70%;
        margin: auto;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 8px;
        font-family: Arial, sans-serif;
    }

    h2 {
        text-align: center;
        color: #333;
    }

    .info-box {
        display: flex;
        align-items: center;
        gap: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 100%;
    }

    .profile-img {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .info-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px 20px;
    }

    .info-grid p {
        margin: 0;
        color: #555;
    }

    strong {
        color: #333;
    }
</style>

<section id="profile">
    <h2 class="fw-bold">@ViewBag.Title</h2>
    <div class="info-box">
        <img src="~/AnhHocVien/@Model.Anh" alt="Ảnh giảng viên" class="profile-img" />
        <div class="info-grid">
            <p><strong>Họ tên:</strong> @Model.HoTen</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Số điện thoại:</strong> @Model.SoDT</p>
            <p><strong>Địa chỉ:</strong> @Model.DiaChi</p>
            <p><strong>Bằng cấp:</strong> @Model.BangCapGV</p>
            <p><strong>Lương:</strong> @Model.Luong</p>
        </div>
    </div>
</section>
