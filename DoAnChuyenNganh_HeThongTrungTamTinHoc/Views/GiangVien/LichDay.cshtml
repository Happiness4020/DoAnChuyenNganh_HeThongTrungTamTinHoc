@model List<DoAnChuyenNganh_HeThongTrungTamTinHoc.Models.LichDay>
@{
    ViewBag.Title = "Lịch dạy";
    Layout = "~/Views/Shared/_GiangVien.cshtml";
}

<link href="~/Css/LichHoc.css" rel="stylesheet" />

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <title>Trung tâm tin học - HUIT</title>
    <style>
        .custom-header {
            background-color: #0066b3;
            color: white;
        }

        body {
            font-family: 'Roboto', sans-serif;
            line-height: 1.6;
            background-color: #f4f4f4;
            color: #333;
        }

        .schedule {
            width: 100%;
            margin: 20px auto;
            overflow-x: auto;
        }
    </style>
</head>
<body class="d-flex flex-column h-100 w-100">
    <header class="custom-header">
    </header>

    <main class="shadow-sm" style="background-color: #fff; max-width: 100%; min-height: 500px;">
        <div class="container-fluid">
            <h3 class="text-center" style="color: #0066b3;">@ViewBag.Title của giảng viên <span style="color: orangered">@ViewBag.TenGV</span></h3>

            @if (ViewBag.LichDay.Count == 0)
            {
                <h3 style="color: orangered;" class="text-center mt-5">Hiện chưa có lịch dạy!</h3>
            }
            else
            {
                foreach (var item in Model)
                {
                    <a href="@Url.Action("DanhSachHocVien", "GiangVien", new { malh = item.MaLH, ngayday = item.NgayDay })" class="text-decoration-none">

                        <table class="table table-bordered table-hover">
                            <thead class="table-primary">
                                <tr>
                                    <th>Lớp học</th>
                                    <th>Mã lớp</th>
                                    <th>Ngày dạy</th>
                                    <th>Giờ bắt đầu</th>
                                    <th>Giờ kết thúc</th>
                                    <th>Giảng viên</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><strong>@item.LopHoc.TenLop</strong></td>
                                    <td>@item.MaLH</td>
                                    <td style="color: orange">@item.NgayDay.ToShortDateString()</td>
                                    <td style="color: orangered">@item.GioBatDau</td>
                                    <td style="color: orangered">@item.GioKetThuc</td>
                                    <td>@item.GiaoVien.HoTen</td>
                                </tr>
                            </tbody>
                        </table>
                    </a> 
                }
            }
        </div>
    </main>

    <footer class="text-white" style="background-color: #0066b3; width: 100%;">
        <!-- Footer content -->
    </footer>

</body>
</html>
