@model IEnumerable<DoAnChuyenNganh_HeThongTrungTamTinHoc.Models.KhoaHoc>
@{
    ViewBag.Title = "Quản lý khóa học";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}

<style>
    /* Tùy chỉnh bảng */
    .custom-table {
        background-color: #ffffff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    }

        .custom-table thead {
            background-color: #007bff;
            color: white;
        }

            .custom-table thead th {
                font-weight: bold;
                text-transform: uppercase;
                padding: 12px 15px;
            }

        .custom-table tbody tr:hover {
            background-color: #f1f5f9;
        }

        .custom-table tbody td {
            padding: 12px 15px;
            vertical-align: middle;
        }

    .table-responsive {
        padding: 15px;
        background-color: #f8f9fa;
        border-radius: 10px;
    }
</style>

<h2 style="color: #0066b3">@ViewBag.Title</h2>

<a class="btn btn-outline-primary mt-3" style="width: 180px;" href="@Url.Action("Index", "Admin")">Quay lại</a>
<br />
<a class="btn btn-outline-primary mt-2 mb-2" style="width: 180px;" href="@Url.Action("KhoaHocAdd", "AdminKhoaHoc")">Thêm khóa học</a>

<form class="d-flex mb-3 mt-2" action="@Url.Action("KhoaHocList", "AdminKhoaHoc")">
    <input class="form-control" id="search" name="search" value="@ViewBag.Search" type="search" placeholder="Tìm kiếm theo tên khóa học" aria-label="Search" style="max-width: 400px;">
    <button class="btn btn-outline-primary ms-2" type="submit">Tìm</button>
    <a class="btn btn-danger ms-2" href="@Url.Action("KhoaHocList", "AdminKhoaHoc")">Hủy</a>
</form>

<div class="container mt-5">
    <h2 class="mb-4 text-center" style="color: #0066b3">Danh Sách Khóa Học</h2>
    <div class="table-responsive">
        <table class="table custom-table">
            <thead>
                <tr>
                    <th>Mã khóa học</th>
                    <th>Tên khóa học</th>
                    <th>Mô tả</th>
                    <th>Ảnh</th>
                    <th>Ngày bắt đầu</th>
                    <th>Ngày kết thúc</th>
                    <th>Học phí</th>
                    <th>Loại khóa học</th>
                    <th>Chương trình học</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var kh in Model)
                {
                    <tr>
                        <td>@kh.MaKH</td>
                        <td>@kh.TenKH</td>
                        <td>@kh.MoTa</td>
                        <td>
                            @{ var imagePath = Server.MapPath($"~/AnhKhoaHoc/{kh.Anh}");
                                if (System.IO.File.Exists(imagePath) && kh.Anh != null)
                                {
                                    <img src="~/AnhKhoaHoc/@kh.Anh" width="150px" />
                                }
                                else
                                {
                                    <img src="~/AnhKhoaHoc/noimage.jpg" width="150px" />
                                }
                            }
                        </td>
                        <td>@kh.NgayBatDau</td>
                        <td>@kh.NgayKetThuc</td>
                        <td>@kh.HocPhi</td>
                        <td>@kh.LoaiKH</td>
                        <td>@kh.ChuongTrinhHoc.TenChuongTrinh</td>
                        <td>
                            <a href="@Url.Action("KhoaHocEdit", "AdminKhoaHoc", new { id = kh.MaKH })" style="text-decoration: none;">Sửa</a>
                            <a href="@Url.Action("KhoaHocDelete", "AdminKhoaHoc", new { id = kh.MaKH })" style="text-decoration: none;">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="container-fluid d-flex justify-content-center">
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @{
                int trangtruoc = ViewBag.Page - 1;
                if (trangtruoc <= 0)
                {
                    trangtruoc = 1;
                }
                int trangsau = ViewBag.Page + 1;
                if (trangsau > ViewBag.NoOfPage)
                {
                    trangsau = ViewBag.NoOfPage;
                }
            }
            <li class="page-item">
                <a class="page-link" href="/Admin/AdminKhoaHoc/KhoaHocList?page=@trangtruoc"><</a>
            </li>
            @for (int i = 0; i < ViewBag.NoOfPage; i++)
            {
                if (i + 1 == ViewBag.Page)
                {
                    <li class="page-item active">
                        <a class="page-link" href="/Admin/AdminKhoaHoc/KhoaHocList?page=@(i + 1)">@(i + 1)</a>
                    </li>
                }
                else
                {
                    <li class="page-item" DS_Sach>
                        <a class="page-link" href="/Admin/AdminKhoaHoc/KhoaHocList?page=@(i + 1)">@(i + 1)</a>
                    </li>
                }
            }
            <li class="page-item">
                <a class="page-link" href="/Admin/AdminKhoaHoc/KhoaHocList?page=@trangsau">></a>
            </li>
        </ul>
    </nav>
</div>
