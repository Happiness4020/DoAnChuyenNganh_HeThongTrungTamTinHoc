@model DoAnChuyenNganh_HeThongTrungTamTinHoc.Models.TaiKhoan
@{
    ViewBag.Title = "Thêm tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}

<h2 style="color: #0066b3">@ViewBag.Title</h2>

<div class="card mb-3 mx-auto mt-3" style="max-width: 800px;">
    <div class="row g-0 mt-1 mb-0">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="card-body p-0 text-dark">
                <h2>@ViewBag.Title</h2>
            </div>
        </div>
    </div>
    <div class="row g-0 mt-1">
        <div class="col-md-12">
            <div class="card-body text-dark p-0">
                @using (Html.BeginForm("Add_Product", "Product", new { area = "Admin" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6">
                            @Html.LabelFor(model => model.TenDangNhap, "Tên đăng nhập")
                            @Html.TextBoxFor(model => model.TenDangNhap, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6">
                            @Html.LabelFor(model => model.QuyenHan, "Quyền hạn")
                            @Html.TextBoxFor(model => model.QuyenHan, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.QuyenHan, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6">
                            
                        </div>
                    </div>
                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6">

                        </div>
                    </div>
                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6">
                            @*@Html.LabelFor(model => model.CategoryID, "Thể loại")
                            <br />
                            @Html.DropDownListFor(model => model.CategoryID, new SelectList(ViewBag.Categories, "CategoryID", "Name"), "Chọn thể loại..")
                            <br />
                            @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })*@
                        </div>
                    </div>
                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6">

                        </div>
                    </div>
                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6">

                        </div>
                    </div>
                    <div class="row my-2">
                        <div class="col-3"></div>
                        <div class="col-6">

                        </div>
                    </div>
                    <div class="row my-2 mt-3 mb-3">
                        <div class="col-3"></div>
                        <div class="col-6">
                            <button type="submit" class="btn btn-primary">Thêm trò chơi</button> &nbsp;
                            <a href="/Admin/Product/Edit_Product_List" class="btn btn-warning">Quay lại</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>