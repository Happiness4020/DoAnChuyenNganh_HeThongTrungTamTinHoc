@model DoAnChuyenNganh_HeThongTrungTamTinHoc.Models.PhuongThucThanhToan

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}

<h3>Bạn có muốn xóa bình luận này?</h3>

<div class="card mb-3 mx-auto mt-3" style="max-width: 800px;">
    <form class="p-4 mt-0" style="max-width: 100%" action="/Admin/AdminPhuongThucThanhToan/PhuongThucThanhToanDeleteConfirmed/@Model.MaPT" method="post">
        <input type="hidden" name="Id" value="@Model.MaPT" />
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Tên phương thức thanh toán
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TenPT)
            </dd>
        </dl>

        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            <a class="btn btn-danger ms-2" href="@Url.Action("PhuongThucThanhToanList", "AdminPhuongThucThanhToan")">Quay lại</a>
        </div>
    </form>
</div>

