@model IEnumerable<DoAnChuyenNganh_HeThongTrungTamTinHoc.Models.PhuongThucThanhToan>

@{
    ViewBag.Title = "Danh Sách Phương Thức Thanh Toán";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}

<style>
    .custom-table {
        background-color: #ffffff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    }

        .custom-table thead {
            background-color: #007bff;
            color: white;
        }

            .custom-table thead th {
                font-weight: bold;
                text-transform: uppercase;
                padding: 12px 15px;
            }

        .custom-table tbody tr:hover {
            background-color: #f1f5f9;
        }

        .custom-table tbody td {
            padding: 12px 15px;
            vertical-align: middle;
        }

    .table-responsive {
        padding: 15px;
        background-color: #f8f9fa;
        border-radius: 10px;
    }
</style>

<h2 style="color: #0066b3">@ViewBag.Title</h2>

<a class="btn btn-outline-primary mt-3" style="width: 180px;" href="@Url.Action("Index", "Admin")">Quay lại</a>
<br />

<a class="btn btn-outline-primary mt-2 mb-2" style="width: 180px;" href="@Url.Action("PhuongThucThanhToanAdd", "AdminPhuongThucThanhToan")">Thêm phương thức thanh toán</a>

<form class="d-flex mb-3 mt-2" action="@Url.Action("PhuongThucThanhToanList", "AdminPhuongThucThanhToan")">
    <input class="form-control me-" id="search" name="search" value="@ViewBag.Search" type="search" placeholder="Tìm kiếm theo tên phương thức thanh toán" aria-label="Search" style="max-width: 400px;">
    <button class="btn btn-outline-primary ms-2" type="submit">Tìm kiếm</button>
    <a class="btn btn-danger ms-2" href="@Url.Action("PhuongThucThanhToanList", "AdminPhuongThucThanhToan")">Hủy</a>
</form>


<div class="container mt-5">
    <h2 class="mb-4 text-center" style="color: #0066b3">Danh Sách Phương Thức Thanh Toán</h2>
    <div class="table-responsive">
        <table class="table custom-table">
            <thead>
                <tr>
                    <th>Tên phương thức</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TenPT</td>
                        <td>
                            <a href="@Url.Action("PhuongThucThanhToanEdit", "AdminPhuongThucThanhToan", new { id = item.MaPT })" style="text-decoration: none;" class="btn btn-light-primary btn-sm">Sửa</a>
                            <a href="@Url.Action("PhuongThucThanhToanDelete", "AdminPhuongThucThanhToan", new { id = item.MaPT })" class="btn btn-danger btn-sm">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>